<div class="container mt-5 mx-5 px-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @product, local: true) do |form| %>
        <% if @product.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>
            <ul>
              <% @product.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Form Fields -->
        <div class="mb-3">
          <%= form.label :name, class: "form-label fw-bold" do %>
            <i class="bi bi-box-fill me-1"></i> Name
          <% end %>
          <%= form.text_field :name, class: "form-control form-control-lg" %>
        </div>

        <div class="mb-3">
          <%= form.label :description, class: "form-label fw-bold" do %>
            <i class="bi bi-card-text me-1"></i> Description
          <% end %>
          <%= form.text_area :description, class: "form-control form-control-lg" %>
        </div>

        <div class="mb-3">
          <%= form.label :price, class: "form-label fw-bold" do %>
            <i class="bi bi-currency-dollar me-1"></i> Price
          <% end %>
          <%= form.number_field :price, class: "form-control form-control-lg", step: 0.01 %>
        </div>

        <div class="mb-3">
          <%= form.label :pictures, class: "form-label fw-bold" do %>
            <i class="bi bi-image me-1"></i> Pictures
          <% end %>
          <%= form.file_field :pictures, class: "form-control form-control-lg", multiple: true %>
        </div>

        <div class="mb-5">
          <%= form.label :category_id, class: "form-label fw-bold" do %>
            <i class="bi bi-tag-fill me-1"></i> Category
          <% end %>
          <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a category" }, { class: "form-select form-select-lg" } %>
        </div>

        <div class="d-grid gap-2">
          <%= form.submit "Save Product", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>